{
  "manifest_version": 2,
  "name": "NZHerald Paywall Unblocker",
  "version": "1.0",

  "description": "Reveals hidden content in premium-restricted NZ-Herald articles",

  "icons": {
    "48": "/nz-herald-icon.ico"
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "/nz-herald-icon.ico"
    },
    "default_title": "Herald Unblocker"
  },
  
  "content_scripts": [
    {
      "matches": ["*://www.nzherald.co.nz/*"],
      "js": ["index.js"]
    }
  ]

}